div#carePlans(style="height: 500px; overflow-y: auto")
	.column-header
		.header.text-center
			h2(style="display: inline-block")
				| Care Plans
			div(style="display: inline-block")
				columnStateSwitcher([column]='this', [columnType]="'careplans'")
	
	.column-content
		div.container("*ngIf"='columnState == "default"' style="width:auto")
			div("*ngIf" = 'columnState == "default" && carePlanLoadFinished')
				accordionRecursion([levelData] = 'carePlans', [columnNum] = 2, [levelNum] = 0, [firstIteration] = 1)
			div("*ngIf" = '!carePlanLoadFinished')
				loading-animation

		div.container("*ngIf"='columnState == "scratchpad"' style="width:auto")
			careplanDisplay([carePlans] = "getScratchPadCarePlans()")
