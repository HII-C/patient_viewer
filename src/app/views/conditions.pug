section("*ngIf"='patient')
    table
        th(style="padding: 15px;")
            h2
                | Conditions
        th(style="text-align: right; padding: 15px;")
            loupe-example
    <!-- Single button -->
    div.btn-group
      button.btn.btn-default.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
        | Tools
        span.caret
      ul.dropdown-menu
        li
          a(href="#!", (click)='sortCondition("date-asc")')
            span.glyphicon.glyphicon-sort-by-alphabet(aria-hidden="true")

        li
          a(href="#!", (click)='sortCondition("date-desc")')
            span.glyphicon.glyphicon-sort-by-alphabet-alt(aria-hidden="true")
      button.btn.btn-default((click)='toggleExpansion()') Toggle Expansion
      button.btn.btn-default((click)='collapse()') Collapse

    p.telt("*ngIf"='viewConditionList.length == 0')
        i (none)
    table.table.table-condensed.table-striped("*ngIf"='viewConditionList.length > 0')
        colgroup
            col(style='width:10%')
            col(style='width:50%')
            col(style='width:15%')
            col(style='width:25%')
        thead
            tr
                th
                th
                    | Description
                th
                    | Status
                th
                    | Onset
        tbody(id='test')
            tr("*ngFor"='let c of viewConditionList', [class.selected]='c.selected', (click)='selectCondition(c)',id='t{{viewConditionList.indexOf(c)}}')
                td
                    input(type='checkbox',id='{{viewConditionList.indexOf(c)}}', value='{{c.code["coding"][0]["code"]}}', (change)='addCollapse($event.target.checked,$event.target.getAttribute("id"))')

                td
                    span {{c.code['text']}} {{c.code['coding'][0]['code']}}
                td {{c.clinicalStatus}}
                td {{c.onsetDateTime | amTimeAgo}}
            tr("*ngIf"="!viewToggle", style="width: 100%")
                td
                    | 
                td
                    button.btn.btn-default(style="width: 100%", (click)='ellipsesToggle()') ...
                td
                    | 
                td
                    | 
            
div
    button.btn.btn-default((click)='testingCsiro()') CSIRO
