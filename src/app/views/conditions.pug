section("*ngIf"='patient')
    table
        th(style="padding: 15px;")
            h2
                | Conditions
        th(style="text-align: right; padding: 15px;")
            loupe-example
    <!-- Single button -->
    div.btn-group
      button.btn.btn-default.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
        | Tools
        span.caret
      ul.dropdown-menu
        li
          a(href="#!", (click)='sortCondition("date-asc")')
            span.glyphicon.glyphicon-sort-by-alphabet(aria-hidden="true")

        li
          a(href="#!", (click)='sortCondition("date-desc")')
            span.glyphicon.glyphicon-sort-by-alphabet-alt(aria-hidden="true")
    p.text-default("*ngIf"='conditions.length == 0')
        i (none)
    table.table.table-condensed.table-striped("*ngIf"='conditions.length > 0')
        colgroup
            col(style='width:10%')
            col(style='width:50%')
            col(style='width:15%')
            col(style='width:25%')
        thead
            tr
                th
                th
                    | Description
                th
                    | Status
                th
                    | Onset
        tbody
            tr("*ngFor"='let c of conditions', [class.selected]='c.selected', (click)='selectCondition(c)')
                td
                    input(type='checkbox', name='conditionsCheckbox')
                td
                    span {{c.code['text']}} {{c.code['coding'][0]['code']}}
                td {{c.clinicalStatus}}
                td {{c.onsetDateTime | amTimeAgo}}
div
    button.btn.btn-default((click)='testingCsiro()') CSIRO
