div.timeline
	.horizTimeLine("*ngIf"='patient')
		.div(style="width:100%; height:12px; background-color:#bfbfbf;")
			.div(style="float:left; width:95%")
				.node((mouseenter)='popup.open(timeline[9], timeline[6], null, $event)', (mouseleave)='popup.close($event)', style="margin-left:14%")
				.node((mouseenter)='popup.open(timeline[4], null, null, $event)', (mouseleave)='popup.close($event)', style="margin-left:38%")
				.node((mouseenter)='popup.open(timeline[5], null, null, $event)', (mouseleave)='popup.close($event)', style="margin-left:6%")
				.node((mouseenter)='popup.open(timeline[1], timeline[2], null, $event)', (mouseleave)='popup.close($event)', style="margin-left:6%")
				.node((mouseenter)='popup.open(timeline[3], timeline[7], null, $event)', (mouseleave)='popup.close($event)', style="margin-left:14%")
				.node((mouseenter)='popup.open(timeline[8], null, null, $event)', (mouseleave)='popup.close($event)')
	.displayBox(id='c1', hidden=true)
	.displayBox(id='c2', hidden=true)
	.displayBox(id='c3', hidden=true)

timeline-popup([patient] = 'patient', #popup='') //passing in patient for showcase only
